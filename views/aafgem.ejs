<!DOCTYPE html>
<html><meta charset="utf-8">
  <head>
    <%- include ('head') %>
    <title><%= title%></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <style media="screen">
      #PageUl{
        display: table;
        margin-left: auto;
        margin-right: auto;
      }
      #pagelist{
        list-style-type: none;
        float: left;
        text-align: center;
      }
    </style>
    <script type="text/javascript">

    </script>
  </head>
  <body style="">
    <div class="" style="text-align:center">
      <h1><%= title %></h1>
    </div>
    <div class="" style="float:right; margin:5px;">
      <form action="/aafgem/1" method="get">
        <input type="text" placeholder="찾기 버튼을 누르세요" name="searchText" width="200px">
        <select name="searchType">
            <option value="name">이름</option>
            <option value="effect">효과</option>
        </select>
        <input action="/aafgem/1" type="submit" class="btn" value="찾기" ></button>

      </form>
    </div>

    <div class="">
      <table id="eqtable" style="width:100%; margin:5px">
        <colgroup>
          <col width="150">
          <col width="200">
          <col width="200">
          <col width="100">
          <col width="400">
        </colgroup>
        <thead>
          <tr  style='text-align: center'>
            <th>등급</th>
            <th>수집품 이름</th>
            <th>루엘 이름</th>
            <th>착용 대상</th>
            <th>효과</th>
          </tr>
        </thead>
        <%# tbody에 잇는 스타일은 '\n ' 줄바꿈을 표현함 %>
        <tbody >
          <% if(typeof(CurrentPage) === 'undefined'){ %>
            <tr>
              <td colspan="5"; style= "text-align:center;"> 검색이 필요합니다.</td>
            </tr>
          <% } else { %>
            <% data.forEach(function(item) { %>
            <tr style="white-space: pre-line; font-size:12px;">
              <td><%- item.gemgrade %></td>
              <td style='text-align: center'><%- item.collectname %></td>
              <td style='text-align: center'><%- item.gemname %></td>
              <td style='text-align: center'><%- item.gemobject %></td>
              <td><%- item.gemeffect %></td>
            </tr>
            <% }); %>
          <% } %>
          <div class="" id="PageUl">
            <% if(typeof(CurrentPage) === 'undefined'){ %>
              <tr>
                <div class="" id="pagelist" >
                  <td colspan="5" style= "text-align:center; font-size:24px">
                    검색이 필요합니다.
                  </td>
                </div>
              </tr>
            <% } else { %>
              <tr>
                <div class=""  id="pagelist" >
                  <td colspan="5" style= "text-align:center; font-size:24px">
                    <% if (CurrentPage > PageSize){ %>
                      <a href="/aafgem/1?searchText=<%-Search %>&searchType=<%- SearchType %>"> ◀◀ </a>
                      <a href="/aafgem/<%- StartPage-1 %>?searchText=<%- Search %>&searchType=<%- SearchType %>"> ◀ </a>
                    <% } %>
                    <% for (var iCount = StartPage; iCount <= EndPage; iCount++ ){ %>
                      <% if (iCount == CurrentPage) { %>
                        <b class="btnnonactive"><%- iCount %></b>
                      <% } else { %>
                        <a href="/aafgem/<%- iCount %>?searchText=<%- Search %>&searchType=<%- SearchType %>" class="btnactive"><%- iCount %></a>
                      <% } %>
                    <% } %>
                    <% if (EndPage < TotalPage){ %>
                      <a href="/aafgem/<%- EndPage+1 %>?searchText=<%- Search %>&searchType=<%- SearchType %>">  ▶ </a>
                      <a href="/aafgem/<%- TotalPage %>?searchText=<%- Search %>&searchType=<%- SearchType %>"> ▶▶ </a>
                    <% } %>
                  </td>
                </div>
              </tr>
            <% } %>
          </div>
        </tbody>
      </table>
    </div>



  </body>
  <footer>
    <%- include ('footer')%>
  </footer>
</html>
