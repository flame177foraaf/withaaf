<!DOCTYPE html>
<html><meta charset="utf-8">

  <head>
    <%- include ('head') %>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <style media="screen">
    input {
      width: 100%;
      padding: 10px 20px;
      margin: 5px 0;
      box-sizing: border-box;
    }
    input[type="text"] {
      border: none;
      border-bottom: solid 2px #D2691E;
    }
    textarea {
			width: 100%;
			height: 200px;
			padding: 10px;
			box-sizing: border-box;
			border: solid 2px;
			border-radius: 5px;
			font-size: 16px;
			resize: both;
		}
    #accgrade {
			width: 100%;
			height: 100px;
			padding: 10px;
			box-sizing: border-box;
			border: solid 2px;
			border-radius: 5px;
			font-size: 16px;
			resize: both;
		}
    input[type=button], input[type=submit], input[type=reset] {
      border: none;
      color: black;
      padding: 8px 16px;
      text-decoration: none;
      margin: 4px 2px;
      cursor: pointer;
    }
    </style>
    <script type="text/javascript">



    </script>
  </head>

  <body style="margin-top: 5px; margin-right: 10%; margin-left:10%; ">
    <div class="content" name= "content"id="content">
      <form class="" name="bodyform" action="/aafacc/fixacc" method="post" onsubmit="">
        <div class="">
          <div class="">
            <input style="float:right; width:0; display:none;"type="text" name="eqid" value="<%= data.accid %>" readonly >
          </div>
          <div class="">
            <label for="">등급</label>
            <div class="">
              <textarea type="text" name="accgrade" rows="6" cols="60" id="accgrade"><%- data.accgrade %></textarea>
            </div>
          </div>
          <div class="">
            <label for="">이름</label>
            <div class="">
              <input type="text" name="accname"  size='40' maxlength='50' value="<%= data.accname %>" id="">
            </div>
          </div>
          <div class="">
            <label for="">제한</label>
            <div class="">
              <input type="text" name="acclimit"  size='40' maxlength='50' value="<%= data.acclimit %>" id="">
            </div>
          </div>
          <div class="">
            <label for="">소켓</label>
            <div class="">
              <input type="text" name="accsocket"  size='40' maxlength='50' value="<%= data.accsocket %>" id="">
            </div>
          </div>
          <div class="">
            <label for="">에테르</label>
            <div class="">
              <input type="text" name="accether"  size='40' maxlength='50' value="<%= data.accether %>" id="">
            </div>
          </div>
          <div class="">
            <label for="">방어력</label>
            <div class="">
              <input type="text" name="accstats"  size='40' maxlength='50' value="<%= data.accstats %>" id="">
            </div>
          </div>
          <div class="">
            <label for="">속성방어 및 강화제한</label>
            <div class="">
              <textarea  type="text" name="accproperty" rows="6" cols="60" id="accproperty"><%- data.accproperty %></textarea>

            </div>
          </div>
          <div class="">
            <label for="">피트</label>
            <div class="">
              <textarea  type="text" name="accfeat" rows="6" cols="60" id="accfeat"><%- data.accfeat %></textarea>
            </div>
          </div>
          <div class="">
            <label for="">커스텀</label>
              <textarea type="text" name="acccustom" rows="6" cols="60" id="acccustom"><%- data.acccustom %></textarea>

            </div>
          </div>
          <div class="">
            <label for="">업그레이드 재료</label>
            <div class="">
              <textarea type="text" name="accup" rows="6" cols="60" id="accup"><%- data.accup%></textarea>

            </div>
          </div>
          <div class="writhingbtn" style="height:100px">

            <div class="" style="float:right; " >
              <input type="submit" name="등록하기" style=""value="등록하기" />
              <input onclick="history.back(-1);" style="" type="button" name="" value="뒤로" />

            </div>
          </div>
        </div>

      </form>
    </div>

  </body>
  <footer>
    <%- include ('footer') %>
  </footer>
  <script type="text/javascript">


    var textarea1 = document.getElementById("accgrade").value;
    textarea1 = textarea1.replace(/<br>|<br \/>/g, "\r\n");
    document.getElementById("accgrade").value = textarea1;
    var textarea2 = document.getElementById("accproperty").value;
    textarea2 = textarea2.replace(/<br>|<br \/>/g, "\r\n");
    document.getElementById("accproperty").value = textarea2;
    var textarea3 = document.getElementById("accfeat").value;
    textarea3 = textarea3.replace(/<br>|<br \/>/g, "\r\n");
    document.getElementById("accfeat").value = textarea3;
    var textarea4 = document.getElementById("acccustom").value;
    textarea4 = textarea4.replace(/<br>|<br \/>/g, "\r\n");
    document.getElementById("acccustom").value = textarea4;
    var textarea5 = document.getElementById("accup").value;
    textarea5 = textarea5.replace(/<br>|<br \/>/g, "\r\n");
    document.getElementById("accup").value = textarea5;

  </script>
</html>
