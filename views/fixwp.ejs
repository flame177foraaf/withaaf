<!DOCTYPE html>
<html>
  <head>
    <%- include ('head') %>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <style media="screen">
    input {
      width: 100%;
      padding: 10px 20px;
      margin: 5px 0;
      box-sizing: border-box;
    }
    input[type="text"] {
      border: none;
      border-bottom: solid 2px #D2691E;
    }
    textarea {
			width: 100%;
			height: 200px;
			padding: 10px;
			box-sizing: border-box;
			border: solid 2px;
			border-radius: 5px;
			font-size: 16px;
			resize: both;
		}
    #wpgrade {
			width: 100%;
			height: 100px;
			padding: 10px;
			box-sizing: border-box;
			border: solid 2px;
			border-radius: 5px;
			font-size: 16px;
			resize: both;
		}
    input[type=button], input[type=submit], input[type=reset] {
      border: none;
      color: black;
      padding: 8px 16px;
      text-decoration: none;
      margin: 4px 2px;
      cursor: pointer;
    }
    </style>
    <script type="text/javascript">
    var str = document.getElementById("textarea_br_\n").value;
    str = str.replaceAll(/(?:"<br/>"|"<br />")/g, "\r\n");
    document.getElementById("textarea_br_\n").value = str;






      function checkonclick() {
        if (document.bodyform.wpname.value == "" || document.bodyform.wpname.value == null || document.bodyform.wpname.value == undefined || ( document.bodyform.wpname.value != null && typeof document.bodyform.wpname.value == "object" && !Object.keys(document.bodyform.wpname.value).length ) ) {
          alert("장비 이름을 입력해주세요!");
          document.bodyform.wpname.focus();
          return false;
        }
        return true;
      }
    </script>
  </head>

  <body style="margin-top: 5px; margin-right: 10%; margin-left:10%; ">
    <h1><%= title  %></h1>
    <div class="content" id="content">
      <form class="" name="bodyform" action="/test/fixwp" method="post" onsubmit="return checkonclick()">
        <div class="">
          <div class="">
            <label for="">등급</label>
            <div class="">
              <textarea type="text" name="wpgrade" rows="6" cols="60" id="textarea_br_\n"><%- data.wpgrade %></textarea>
            </div>
          </div>
          <div class="">
            <label for="">이름</label>
            <div class="">
              <input type="text" name="wpname"  size='40' maxlength='50' value="<%= data.wpname %>" id="">
            </div>
          </div>
          <div class="">
            <label for="">제한</label>
            <div class="">
              <input type="text" name="wplimit"  size='40' maxlength='50' value="<%= data.wplimit %>" id="">
            </div>
          </div>
          <div class="">
            <label for="">소켓</label>
            <div class="">
              <input type="text" name="wpsocket"  size='40' maxlength='50' value="<%= data.wpsocket %>" id="">
            </div>
          </div>
          <div class="">
            <label for="">에테르</label>
            <div class="">
              <input type="text" name="wpether"  size='40' maxlength='50' value="<%= data.wpether %>" id="">
            </div>
          </div>
          <div class="">
            <label for="">성능</label>
            <div class="">
              <input type="text" name="wpstats"  size='40' maxlength='50' value="<%= data.wpstats %>" id="">
            </div>
          </div>
          <div class="">
            <label for="">속성 및 강화제한</label>
            <div class="">
              <textarea  type="text" name="wpproperty" rows="6" cols="60" id="textarea_br_\n"><%- data.wpproperty %></textarea>

            </div>
          </div>
          <div class="">
            <label for="">피트</label>
            <div class="">
              <textarea  type="text" name="wpfeat" rows="6" cols="60" id="textarea_br_\n"><%- data.wpfeat %></textarea>

            </div>
          </div>
          <div class="">
            <label for="">커스텀</label>
              <textarea type="text" name="wpcustom" rows="6" cols="60" id="textarea_br_\n"><%- data.wpcustom %></textarea>

            </div>
          </div>
          <div class="">
            <label for="">업그레이드 재료</label>
            <div class="">
              <textarea type="text" name="wpup" rows="6" cols="60" id="textarea_br_\n"><%- data.wpup %></textarea>

            </div>
          </div>
          <div class="">

            <div class="" style="float:right; ">
              <input type="submit" name="등록하기" value="등록하기" />
              <input onclick="history.back(-1);" type="button" name="" value="뒤로" />

            </div>
          </div>
        </div>

      </form>
    </div>

  </body>
  <footer>
    <%- include ('footer') %>
  </footer>
  <script type="text/javascript">
  </script>
</html>
