<!DOCTYPE html>
<html><meta charset="utf-8">

  <head>
    <%- include ('head') %>
    <title><%= title%></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <style media="screen">
      #PageUl{
        display: table;
        margin-left: auto;
        margin-right: auto;
      }
      #pagelist{
        list-style-type: none;
        float: left;
        text-align: center;
      }
    </style>
    <script type="text/javascript">

    </script>
  </head>

  <body style="">
    <div class="title_div" >
      <h1><%= title %></h1>

    </div>

    <div class="" id="seach_form_id" >
      <form action="/featsup/1" method="get" >
        <input type="text" placeholder="모든 항목" name="searchText" style="width:200px">

        <select name="searchType">
            <option value="name">이름</option>
            <option value="feat">피트</option>
            <option value="reversefeat">역피트</option>
        </select>
        <input action="/featsup/1" type="submit" class="btn" value="찾기" ></button>
      </form>

    </div>

    <div class="">
      <table id="eqtable" style="width:100%; margin:5px">
        <colgroup >
          <col width="150">
          <col width="150">
          <col width="150">
          <col width="150">
        </colgroup>

        <thead id="featsup" width='' border='1' class='aaf' bordercolor='#736BE0' cellspacing='0' cellpadding='1' bordercolorlight='#736BE0' bordercolordark='#FFFFFF'>
          <tr>
            <th>등급</th>
            <th>이름</th>
            <th>피트</th>
            <th>역피트</th>
          </tr>
        </thead>

        <%# tbody에 잇는 스타일은 '\n ' 줄바꿈을 표현함 %>
        <tbody>
          <% if(typeof(CurrentPage) === 'undefined'){ %>
            <tr>
              <td colspan="4"; style= "text-align:center;"> 검색이 필요합니다.</td>
            </tr>
          <% } else { %>
            <% data.forEach(function(item) { %>
            <tr  style="white-space: pre-line; font-size:12px;">
              <td><%- item.featgrade %></td>
              <td><%- item.featname %></td>
              <td><%- item.feat %></td>
              <td><%- item.reversefeat %></td>
            </tr>
            <% }); %>
          <% } %>
          <div class="" id="PageUl">
              <% if(typeof(CurrentPage) === 'undefined'){ %>
                <tr>
                  <div class=""  id="pagelist" >
                    <td colspan="4" style= "text-align:center; font-size:24px">
                      검색이 필요합니다.
                    </td>
                  </div>
                </tr>

              <% } else { %>
                <tr>
                  <div class="" id="pagelist" >
                    <td colspan="4" style= "text-align:center; font-size:24px">
                      <% if (CurrentPage > PageSize){ %>
                        <a href="/featsup/1?searchText=<%-Search %>&searchType=<%- SearchType %>"> ◀◀ </a>
                        <a href="/featsup/<%- StartPage-1 %>?searchText=<%- Search %>&searchType=<%- SearchType %>"> ◀ </a>
                      <% } %>
                      <% for (var iCount = StartPage; iCount <= EndPage; iCount++ ){ %>
                        <% if (iCount == CurrentPage) { %>
                          <b class="btnnonactive"><%- iCount %></b>
                        <% } else { %>
                          <a href="/featsup/<%- iCount %>?searchText=<%- Search %>&searchType=<%- SearchType %>" class="btnactive"><%- iCount %></a>
                        <% } %>
                      <% } %>
                      <% if (EndPage < TotalPage){ %>
                        <a href="/featsup/<%- EndPage+1 %>?searchText=<%- Search %>&searchType=<%- SearchType %>">  ▶ </a>
                        <a href="/featsup/<%- TotalPage %>?searchText=<%- Search %>&searchType=<%- SearchType %>"> ▶▶ </a>
                      <% } %>
                    </td>
                  </div>
                </tr>
              <% } %>
            </tr>
          </div>
        </tbody>
      </table>
    </div>
    <% if(typeof(data[0]) === 'undefined'){ %>
    <div class="" style="text-align: center">
      <div class="">
        <form class="" action="/featsup/add_feat" method="get">
          <button onclick=location.href="/featsup/add_feat" type="button" name="button" style="width:200px">신규등록</a></button>
        </form>
      </div>
    </div>
    <% } else { %>
    <div class="" style="text-align: center">
      <div class="">
        <form class="" action="/featsup/add_feat" method="get">
          <button onclick=location.href="/featsup/add_feat" type="button" name="button" style="width:200px">신규등록</a></button>
        </form>
      </div>

      <form class="" name="add" action="/featsup/fixfeat" method="get"  onsubmit="return checkonclick()">
        <input type=text list=browsers style="" checked value="<%= data[0].featname %>" name="Seachname">
        <%# 밸류값을 %=title 과 같이 해주면 받아오는 title 값에 따라 value 값이 달라지게 된다. %>
          <datalist id="browsers" name="datalistname" class="" style="width:50%">
            <% data.forEach(function(item) { %>
            <option value='<%= item.featname%>' style=""><%- item.featname%></option>
            <% }); %>
          </datalist>
        <input action="/featsup/fixfeat" type="submit" class="btn" value="변경하기" ></button>
      </form>
    </div>
    <% } %>
  </body>
  <footer>
    <%- include ('footer')%>
  </footer>



</html>
