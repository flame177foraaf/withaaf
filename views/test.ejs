<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <%- include ('head') %>
  <title><%= title%></title>
  <link rel='stylesheet' href='/stylesheets/style.css' />

  <style media="screen">
  </style>

  <script src="https://code.jquery.com/jquery-3.5.1.min.js"> </script>

  <script type="text/javascript">
    $(document).ready(function() {

      $('#try_btn').click(function() {
        $.ajax({
          url: '/test/ing',
          type: 'post',
          data: {
            content: $("#contentbox").text(),
          },
          success: function(data) {
            $('#contentbox').text(data.content);
          }
        });
      });
    });
  </script>
</head>

<body style="">

  <div class="">
    <form class="" action="/aafwp" method="post">

    <div class="" style="text-align: center; " id="contentbox">
        <textarea name="contentbox" rows="15" cols="80"></textarea>


    </div>
    <div class="" style="text-align: center; ">
      <button type="button" name="button" style="" id="try_btn"> 변환!</button>

    </div>
  </form>

  </div>
</body>
<footer>
  <%- include ('footer')%>
</footer>

</html>
